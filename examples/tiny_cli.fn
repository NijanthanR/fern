# Tiny CLI template
# Demonstrates a small command-dispatch shape for CLI-style programs.

fn run_greet(name: String) -> Int:
    println(String.concat("hello, ", name))
    0

fn run_help() -> Int:
    println("usage: app greet <name>")
    1

fn dispatch(command: String, value: String) -> Int:
    if String.eq(command, "greet"):
        run_greet(value)
    else:
        run_help()

fn main() -> Int:
    dispatch("greet", "fern")
